<% if @hungrybee.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains <%= pluralize(@hungrybee.errors.count, "error") %>
      </div>
      <ul>
      <% @hungrybee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
<% end %>